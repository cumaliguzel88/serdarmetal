---
import Container from '../ui/Container.astro';
import type { SiteConfig } from '../../content/site.config';
import logoImage from '../../../assets/serdarmetallogo.png';

interface Props {
  t: <T = string>(key: string) => T;
  config: SiteConfig;
}

const { t, config } = Astro.props;
---

<footer class="border-t border-slate-200 bg-slate-50 py-12 sm:py-14">
  <Container>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      <div class="space-y-3">
        <div class="flex items-center gap-3">
          <img src={logoImage.src} alt={t('site.name')} class="h-12 w-auto object-contain" loading="lazy" />
          <p class="font-display text-xl font-bold tracking-[0.18em] text-slate-900">{t('site.name')}</p>
        </div>
        <p class="text-sm leading-7 text-slate-600">{t('footer.description')}</p>
      </div>

      <div class="space-y-3">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-500">{t('footer.quickLinksTitle')}</p>
        <ul class="space-y-2 text-sm text-slate-700">
          <li><a class="transition hover:text-[var(--color-accent)]" href="#hizmetler">{t('header.nav.services')}</a></li>
          <li><a class="transition hover:text-[var(--color-accent)]" href="#hakkimizda">{t('header.nav.about')}</a></li>
          <li><a class="transition hover:text-[var(--color-accent)]" href="#iletisim">{t('header.nav.contact')}</a></li>
        </ul>
      </div>

      <div class="space-y-3">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-500">{t('footer.contactTitle')}</p>
        <ul class="space-y-2 text-sm text-slate-700">
          <li>
            <a href={config.contact.phoneHref} class="transition hover:text-[var(--color-accent)]">{config.contact.phone}</a>
          </li>
          <li>
            <a href={`mailto:${config.contact.email}`} class="transition hover:text-[var(--color-accent)]">{config.contact.email}</a>
          </li>
          <li>{config.contact.hours}</li>
        </ul>
      </div>

      <div class="space-y-3">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-500">{t('footer.mapTitle')}</p>
        <ul class="space-y-2 text-sm text-slate-700">
          {config.contact.locations.map((location) => (
            <li class="rounded-xl border border-slate-200 bg-white px-3 py-2">
              <p class="font-medium text-slate-900">{location.label}</p>
              <a
                href={location.mapOpenUrl}
                target="_blank"
                rel="noreferrer"
                class="mt-1 inline-block text-[var(--color-accent)] transition hover:text-[var(--color-accent-strong)]"
              >
                {t('contact.openMap')}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <p class="mt-8 border-t border-slate-200 pt-6 text-center text-xs font-medium text-slate-500">{t('footer.note')}</p>
  </Container>
</footer>

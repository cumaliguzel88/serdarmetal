---
import { Image } from 'astro:assets';
import Button from '../ui/Button.astro';
import Container from '../ui/Container.astro';
import logoImage from '../../../assets/serdarmetallogo.png';

interface Props {
  t: <T = string>(key: string) => T;
  phoneHref: string;
}

const { t, phoneHref } = Astro.props;
---

<header class="sticky top-0 z-50 overflow-x-clip border-b border-[#8d001f] bg-[linear-gradient(90deg,#8f001f_0%,#b3002d_52%,#8f001f_100%)] shadow-[0_10px_30px_rgba(114,0,28,0.36)]">
  <Container>
    <div class="flex min-h-[4.4rem] items-center justify-between gap-1 sm:min-h-[5.5rem] sm:gap-3 lg:min-h-[6rem] lg:gap-4">
      <a href="#hero" class="inline-flex items-center gap-1.5 sm:gap-3" aria-label={t('site.name')}>
        <Image
          src={logoImage}
          alt={t('site.name')}
          class="h-10 w-auto max-w-[70px] rounded-lg bg-white/95 p-1.5 object-contain shadow-[0_6px_16px_rgba(15,23,42,0.2)] sm:h-14 sm:max-w-[112px] sm:p-2 lg:h-[4.25rem] lg:max-w-[126px]"
          format="webp"
          quality={82}
          widths={[140, 180, 220, 320]}
          sizes="(max-width: 639px) 70px, (max-width: 1023px) 112px, 126px"
          loading="eager"
          fetchpriority="high"
        />
        <span class="font-display text-[0.64rem] font-bold uppercase tracking-[0.08em] whitespace-nowrap text-white max-[400px]:text-[0.58rem] sm:text-sm sm:tracking-[0.2em]">
          {t('header.logo')}
        </span>
      </a>

      <nav class="hidden items-center gap-6 md:flex" aria-label={t('header.navAria')}>
        <a href="#hizmetler" class="text-sm font-medium text-white/90 transition hover:text-white">{t('header.nav.services')}</a>
        <a href="#hakkimizda" class="text-sm font-medium text-white/90 transition hover:text-white">{t('header.nav.about')}</a>
        <a href="#iletisim" class="text-sm font-medium text-white/90 transition hover:text-white">{t('header.nav.contact')}</a>
      </nav>

      <div class="flex items-center">
        <details class="relative md:hidden">
          <summary
            class="inline-flex h-11 w-11 list-none items-center justify-center rounded-xl border border-white/45 bg-white/10 text-white transition hover:bg-white/20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
            aria-label={t('header.menuToggle')}
          >
            <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path stroke-linecap="round" d="M4 7h16M4 12h16M4 17h16" />
            </svg>
          </summary>
          <div class="absolute right-0 mt-3 w-56 rounded-2xl border border-slate-200 bg-white p-3 shadow-[0_14px_32px_rgba(15,23,42,0.22)]">
            <nav class="space-y-1.5" aria-label={t('header.navAria')}>
              <a href="#hizmetler" class="block rounded-lg px-3 py-2 text-sm font-medium text-slate-700 transition hover:bg-slate-100 hover:text-[var(--color-accent)]">{t('header.nav.services')}</a>
              <a href="#hakkimizda" class="block rounded-lg px-3 py-2 text-sm font-medium text-slate-700 transition hover:bg-slate-100 hover:text-[var(--color-accent)]">{t('header.nav.about')}</a>
              <a href="#iletisim" class="block rounded-lg px-3 py-2 text-sm font-medium text-slate-700 transition hover:bg-slate-100 hover:text-[var(--color-accent)]">{t('header.nav.contact')}</a>
            </nav>
            <Button
              href={phoneHref}
              variant="primary"
              ariaLabel={t('contact.labels.phone')}
              class="mt-3 w-full"
            >
              {t('header.cta')}
            </Button>
          </div>
        </details>
      </div>
    </div>
  </Container>
</header>

---
import Container from '../ui/Container.astro';
import SectionTitle from '../ui/SectionTitle.astro';
import ismakinasiImage from '../../../assets/ismakinasÄ±.png';
import metalGeriDonusumImage from '../../../assets/metalgeridonusum.jpg';

interface Props {
  t: <T = string>(key: string) => T;
}

const { t } = Astro.props;
const paragraphs = t<string[]>('about.content');
---

<section id="hakkimizda" class="scroll-mt-28 py-16 sm:py-20" data-animate-group>
  <Container>
    <div class="space-y-8">
      <SectionTitle eyebrow={t('about.eyebrow')} title={t('about.title')} />

      <article class="rounded-3xl border border-slate-200 bg-white p-6 shadow-[0_8px_22px_rgba(148,163,184,0.14)] sm:p-8">
        <div class="grid gap-6 lg:grid-cols-[1.1fr_0.9fr] lg:gap-8">
          <div class="space-y-5 text-sm leading-8 text-slate-700 sm:text-base">
            {paragraphs.map((paragraph) => (
              <p data-animate-item>{paragraph}</p>
            ))}
          </div>

          <div class="grid gap-4" data-animate-item>
            <div class="overflow-hidden rounded-2xl border border-slate-200 bg-slate-50 p-2 shadow-[0_10px_20px_rgba(148,163,184,0.16)]">
              <img src={ismakinasiImage.src} alt={t('about.visual1Alt')} class="aspect-[4/3] w-full rounded-xl object-cover" loading="lazy" />
            </div>
            <div class="overflow-hidden rounded-2xl border border-slate-200 bg-slate-50 p-2 shadow-[0_10px_20px_rgba(148,163,184,0.16)]">
              <img src={metalGeriDonusumImage.src} alt={t('about.visual2Alt')} class="aspect-[4/3] w-full rounded-xl object-cover" loading="lazy" />
            </div>
          </div>
        </div>
      </article>
    </div>
  </Container>
</section>

---
import { Image } from 'astro:assets';
import Button from '../ui/Button.astro';
import Container from '../ui/Container.astro';
import type { SiteConfig } from '../../content/site.config';
import background1Image from '../../../assets/background1.jpg';
import background2Image from '../../../assets/background2.jpg';
import heroImage from '../../../assets/geridonusum.jpg';

interface Props {
  t: <T = string>(key: string) => T;
  config: SiteConfig;
  whatsappHref: string;
}

const { t, config, whatsappHref } = Astro.props;
---

<section
  id="hero"
  class="scroll-mt-28 bg-[linear-gradient(180deg,rgba(255,255,255,1)_0%,rgba(255,251,252,1)_44%,rgba(255,255,255,1)_100%)] py-16 sm:py-20 lg:py-24"
  data-animate-group
>
  <Container>
    <div class="grid gap-10 lg:grid-cols-[0.88fr_1.12fr] lg:items-center">
      <div class="space-y-7">
        <p class="text-xs font-semibold uppercase tracking-[0.24em] text-[var(--color-accent)]" data-animate-item>{t('hero.eyebrow')}</p>
        <h1 class="font-display text-3xl font-bold leading-tight tracking-tight text-slate-900 sm:text-4xl lg:text-5xl" data-animate-item>
          {t('hero.title')}
        </h1>
        <p class="max-w-2xl text-base leading-8 text-slate-600 sm:text-lg" data-animate-item>{t('hero.description')}</p>

        <div class="flex flex-wrap items-center gap-3" data-animate-item>
          <Button href={config.contact.phoneHref} ariaLabel={t('contact.labels.phone')}>
            {t('hero.ctaCall')}
          </Button>
          <Button href={whatsappHref} variant="whatsapp" ariaLabel={t('contact.labels.whatsapp')}>
            {t('hero.ctaWhatsapp')}
          </Button>
        </div>
      </div>

      <div class="space-y-4" data-animate-item>
        <div class="rounded-3xl border border-dashed border-slate-300 bg-[linear-gradient(150deg,rgba(255,255,255,1)_0%,rgba(248,250,252,1)_55%,rgba(255,237,242,0.65)_100%)] p-3 shadow-[0_20px_40px_rgba(148,163,184,0.2)] sm:p-4 lg:p-5">
          <Image
            src={heroImage}
            alt={t('hero.mediaAlt')}
            class="aspect-[4/3] w-full rounded-2xl border border-slate-200/80 object-cover lg:aspect-[4/3]"
            format="webp"
            quality={74}
            widths={[560, 760, 960, 1280]}
            sizes="(max-width: 1023px) 100vw, 56vw"
            loading="eager"
            fetchpriority="high"
          />
        </div>

        <div class="grid grid-cols-2 gap-3 sm:gap-4">
          <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white p-2 shadow-[0_8px_18px_rgba(148,163,184,0.16)]">
            <Image
              src={background1Image}
              alt={t('hero.miniVisual1Alt')}
              class="aspect-[16/10] w-full rounded-xl object-cover"
              format="webp"
              quality={72}
              widths={[280, 420, 560]}
              sizes="(max-width: 639px) 48vw, (max-width: 1023px) 36vw, 18vw"
              loading="lazy"
            />
          </div>
          <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white p-2 shadow-[0_8px_18px_rgba(148,163,184,0.16)]">
            <Image
              src={background2Image}
              alt={t('hero.miniVisual2Alt')}
              class="aspect-[16/10] w-full rounded-xl object-cover"
              format="webp"
              quality={72}
              widths={[280, 420, 560]}
              sizes="(max-width: 639px) 48vw, (max-width: 1023px) 36vw, 18vw"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>

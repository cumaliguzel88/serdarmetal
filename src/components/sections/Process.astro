---
import Container from '../ui/Container.astro';
import SectionTitle from '../ui/SectionTitle.astro';
import type { ProcessStep } from '../../content/process';

interface Props {
  t: <T = string>(key: string) => T;
  steps: ProcessStep[];
}

const { t, steps } = Astro.props;
---

<section id="surec" class="scroll-mt-28 py-16 sm:py-20" data-animate-group>
  <Container>
    <div class="space-y-8">
      <SectionTitle eyebrow={t('process.eyebrow')} title={t('process.title')} />

      <ol class="grid gap-4 lg:grid-cols-3">
        {steps.map((step, index) => (
          <li data-animate-item class="rounded-2xl border border-slate-200 bg-white p-6 shadow-[0_8px_20px_rgba(148,163,184,0.14)]">
            <p class="text-xs font-semibold uppercase tracking-[0.24em] text-[var(--color-accent)]">{`0${index + 1}`}</p>
            <h3 class="mt-3 font-display text-xl font-semibold text-slate-900">{t(step.titleKey)}</h3>
            <p class="mt-2 text-sm leading-7 text-slate-600 sm:text-base">{t(step.descriptionKey)}</p>
          </li>
        ))}
      </ol>
    </div>
  </Container>
</section>
